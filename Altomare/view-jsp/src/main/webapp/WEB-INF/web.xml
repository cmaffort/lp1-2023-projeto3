<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>CadastrarFuncionario</servlet-name>
        <servlet-class>br.cefetmg.inf.altomare.controller.CadastrarFuncionario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FuncionarioServlet</servlet-name>
        <servlet-class>br.cefetmg.inf.altomare.controller.FuncionarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MudaEstadoPedido</servlet-name>
        <servlet-class>br.cefetmg.inf.altomare.controller.MudaEstadoPedido</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastrarFuncionario</servlet-name>
        <url-pattern>/CadastrarFuncionario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FuncionarioServlet</servlet-name>
        <url-pattern>/FuncionarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MudaEstadoPedido</servlet-name>
        <url-pattern>/MudaEstadoPedido</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
